html{height:100%;width:100%;margin:0;padding:0}main{display:flex;justify-content:center;position:relative;margin:2rem auto;margin-top:0;padding:1rem}body{font-family:palatino,georgia,serif;-webkit-font-smoothing:antialiased;text-rendering:optimizeLegibility;line-height:1.5;font-size:1.1rem}section.page{width:45rem}header{position:relative;font-size:calc(1.1rem + .2rem)}footer{position:relative;bottom:0;margin:1rem auto 0}article{margin:2rem 0}.list{display:grid;gap:8px;grid-template-columns:1fr min-content}.list div{white-space:nowrap;overflow:hidden;text-overflow:ellipsis}.list a{text-decoration:none;color:#0d0d0d}a.active{text-decoration:bold}blockquote{font-style:italic;padding-left:1rem}a{text-decoration-skip-ink:auto;text-decoration:underline}h1,h2,h3,h4,h5,h6{font-family:avenir,helvetica,system-ui,sans-serif}h1 a,h2 a,h3 a,h4 a,h5 a,h6 a{text-decoration:none}header a{text-decoration:none;color:#0d0d0d}@media screen and (max-width:45rem){.posts{grid-template-columns:1fr;grid-row-gap:0}.posts div{white-space:normal}.posts div.last{margin-bottom:1.5rem}}